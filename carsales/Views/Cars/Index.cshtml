@model List<Cars>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Our Cars</h1>
@ViewData["CarInfo"]
<div> Available Cars List...</div>
<br />
<a class="btn btn-primary btn-sm" href="/Cars/Create">New Car</a>
<br />
<table class="table table-bordered table-responsive table-hover">
    <tr>  
        <th>Car Brand</th>
        <th>Car Model</th>
        <th>Car Make</th>
        <th>Mileage</th>
        <th>Seats</th>
        <th>Gearbox Model</th>
        <th>Price</th>
        <th>Action</th>  
         

    </tr>  
    @foreach(Cars item in Model)
    {
    
        <tr>
            <td>@item.Brand</td>
            <td>@item.Carmodel</td>
            <td>@item.Modelyear</td>
            <td>@item.Mileage</td>
            <td>@item.Seats</td>
            <td>@item.Gearbox</td>
            <td>@item.Price</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/Cars/Edit?id=@item.Id">Edit</a>
                <a class="btn btn-danger btn-sm" href="/Cars/Delete?id=@item.Id">Delete</a>               
            </td>
              
        </tr>
    
    }
</table>