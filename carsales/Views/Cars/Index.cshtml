@{
}
<h1>Our Cars</h1>
<h3> We have these list of cars </h3>
@ViewData["CarInfo"]
<div> Available Cars List...</div>
<table class="table table-bordered table-responsive table-hover">
    <tr>  
        <th>Car Brand</th>
        <th>Car Model</th>
        <th>Car Make</th>
        <th>Mileage</th>
        <th>Seats</th>
        <th>Gearbox Model</th>
        <th>Price</th>
        <th>Update</th>  
        <th>Clear</th> 

    </tr>  
    @foreach(Cars item in Model)
    {
    
        <tr>
            <td>@item.Brand</td>
            <td>@item.Carmodel</td>
            <td>@item.Modelyear</td>
            <td>@item.Mileage</td>
            <td>@item.Seats</td>
            <td>@item.Gearbox</td>
            <td>@item.Price</td>
            <td><a asp-action ="Edit" asp-route-id = "@item.Id">Edit</a></td>
            <td><a asp-action ="delete" asp-route-id =" @item.Id">Delete</a></td>    
        </tr>
    
    }
</table>